// Prisma schema for Flip Match with Supabase Postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @db.VarChar(255) // wallet address
  username     String?  @db.VarChar(255)
  peekCount    Int      @default(0)
  autoMatchCount Int    @default(0)
  createdAt    DateTime @default(now())
  plays        Play[]
  scores       Score[]
}

model Play {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  startTime     DateTime @default(now())
  endTime       DateTime?
  finalTimeMs   Int?
  penaltiesMs   Int      @default(0)
  powerupsPeek  Int      @default(0)
  powerupsAuto  Int      @default(0)
  inventoryPeekUsed Int  @default(0)
  inventoryAutoUsed Int  @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Score {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  username    String?  @db.VarChar(255)
  finalTimeMs Int
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([finalTimeMs])
}


